{
  "name": "passport-ui",
  "version": "1.0.48",
  "type": "module",
  "description": "A modern, customizable UI component library with motion primitives and theme support built with React, TypeScript, Tailwind CSS, and shadcn/ui components.",
  "license": "MIT",
  "author": "Praveen Thirumurugan <mail@praveent.com>",
  "homepage": "https://github.com/praveentcom/passport-ui",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/praveentcom/passport-ui.git"
  },
  "bugs": {
    "url": "https://github.com/praveentcom/passport-ui/issues"
  },
  "keywords": [
    "react",
    "typescript",
    "tailwind",
    "ui-components",
    "shadcn",
    "motion",
    "theme",
    "design-system"
  ],
  "main": "./dist/accordion.cjs",
  "module": "./dist/accordion.js",
  "types": "./dist/accordion.d.ts",
  "exports": {
    "./package.json": "./package.json"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "files": [
    "dist",
    "src",
    "components.json",
    "postcss.config.mjs",
    "README.md",
    "LICENSE.md",
    "ATTRIBUTIONS.md",
    "CONTRIBUTING.md",
    "SECURITY.md",
    "CHANGELOG.md"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "engines": {
    "node": "^22.0.0"
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "node scripts/build-batched.js",
    "build:full": "npm run build && npm run generate-exports",
    "generate-exports": "node scripts/generate-exports.js",
    "pretty": "prettier --write .",
    "lint": "eslint . --ext .ts,.tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "clean": "rimraf .turbo dist storybook-static",
    "format-readme": "node scripts/format-readme.js",
    "format-registry": "node scripts/format-registry.js",
    "format-sitemap": "node scripts/format-sitemap.js",
    "format": "npm run format-readme && npm run format-registry && npm run format-sitemap",
    "release": "npm run clean && npm run build:full && npm publish",
    "release:github": "npm run clean && npm run build:full && node scripts/publish-github.js",
    "release:all": "npm run clean && npm run build:full && npm publish && node scripts/publish-github.js",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major",
    "prepublishOnly": "npm run clean && npm run build:full && npm run type-check && npm run lint",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "deploy-storybook": "npm run build-storybook && cp cloudflare/_headers cloudflare/_redirects storybook-static/",
    "docs:dev": "cd docs && NODE_ENV=development npm run dev",
    "docs:build": "cd docs && npm run build",
    "docs:install": "cd docs && npm install",
    "validate:components-list": "node scripts/validate-components-list.mjs"
  },
  "peerDependencies": {
    "@tailwindcss/postcss": "^4.1.13",
    "framer-motion": "^12.0.0",
    "next": "^15.5.3",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tailwindcss": "^4.1.13"
  },
  "dependencies": {
    "@emotion/is-prop-valid": "^1.3.1",
    "@hookform/resolvers": "^5.2.1",
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-aspect-ratio": "^1.1.7",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-context-menu": "^2.2.16",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-hover-card": "^1.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-menubar": "^1.1.16",
    "@radix-ui/react-navigation-menu": "^1.2.14",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-radio-group": "^1.3.8",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toggle": "^1.1.9",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@react-three/fiber": "^9.3.0",
    "@storybook/nextjs": "^9.1.5",
    "@types/three": "^0.180.0",
    "@vercel/analytics": "^1.5.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "date-fns": "^4.1.0",
    "embla-carousel-react": "^8.6.0",
    "framer-motion": "^12.0.0",
    "highlight.js": "^11.11.1",
    "input-otp": "^1.4.2",
    "isomorphic-dompurify": "^2.26.0",
    "lucide-react": "^0.544.0",
    "next-themes": "^0.4.6",
    "prettier": "^3.6.2",
    "react-day-picker": "^9.9.0",
    "react-hook-form": "^7.62.0",
    "react-resizable-panels": "^3.0.6",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "three": "^0.180.0",
    "tw-animate-css": "^1.3.8",
    "vaul": "^1.1.2",
    "zod": "^4.1.8"
  },
  "devDependencies": {
    "@next/eslint-plugin-next": "^15.5.4",
    "@storybook/addon-a11y": "^9.1.5",
    "@storybook/addon-docs": "^9.1.5",
    "@storybook/addon-webpack5-compiler-swc": "^4.0.1",
    "@storybook/react-webpack5": "^9.1.5",
    "@tailwindcss/postcss": "^4.1.13",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/node": "^24.5.2",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^8.0.0",
    "eslint-plugin-react": "^7.0.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-storybook": "^9.1.5",
    "os-browserify": "^0.3.0",
    "path-browserify": "^1.0.1",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "postcss-loader": "^8.2.0",
    "process": "^0.11.10",
    "storybook": "^9.1.5",
    "tailwindcss": "^4.1.13",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  }
}
