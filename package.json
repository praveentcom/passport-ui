{
  "name": "passport-ui",
  "version": "1.0.5",
  "description": "A modern, customizable UI component library with motion primitives and theme support built with React, TypeScript, Tailwind CSS, and shadcn/ui components.",
  "license": "MIT",
  "types": "./dist/client.d.ts",
  "main": "./dist/client.js",
  "module": "./dist/client.mjs",
  "author": "Praveen Thirumurugan <mail@praveent.com>",
  "homepage": "https://github.com/praveentcom/passport-ui",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/praveentcom/passport-ui.git"
  },
  "bugs": {
    "url": "https://github.com/praveentcom/passport-ui/issues"
  },
  "keywords": [
    "react",
    "typescript",
    "tailwind",
    "ui-components",
    "shadcn",
    "motion",
    "theme",
    "design-system"
  ],
  "exports": {
    "./server": {
      "types": "./dist/server.d.ts",
      "import": "./dist/server.mjs",
      "require": "./dist/server.js"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "import": "./dist/client.mjs",
      "require": "./dist/client.js"
    },
    "./styles.css": "./src/styles.css",
    "./components.json": "./components.json"
  },
  "files": [
    "dist",
    "src",
    "components.json",
    "postcss.config.mjs",
    "README.md"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "pretty": "prettier --write .",
    "lint": "eslint . --ext .ts,.tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "format-readme": "node scripts/format-readme.js",
    "release": "npm run clean && npm run build && npm publish",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major",
    "prepublishOnly": "npm run clean && npm run build && npm run type-check && npm run lint",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "peerDependencies": {
    "@tailwindcss/postcss": "^4.1.12",
    "motion": ">=12.0.0",
    "next": ">=15.5.2",
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0",
    "tailwindcss": "^4.1.12"
  },
  "dependencies": {
    "@emotion/is-prop-valid": "^1.3.1",
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-aspect-ratio": "^1.1.7",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-context-menu": "^2.2.16",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-hover-card": "^1.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-menubar": "^1.1.16",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-radio-group": "^1.3.8",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-toggle": "^1.1.9",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@storybook/nextjs": "^9.1.5",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "date-fns": "^4.1.0",
    "embla-carousel-react": "^8.6.0",
    "input-otp": "^1.4.2",
    "lucide-react": "^0.542.0",
    "motion": ">=12.0.0",
    "next-themes": "^0.4.6",
    "prettier": "^3.6.2",
    "react-day-picker": "^9.9.0",
    "react-resizable-panels": "^3.0.5",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "tw-animate-css": "^1.3.8",
    "vaul": "^1.1.2"
  },
  "devDependencies": {
    "@storybook/addon-docs": "^9.1.4",
    "@storybook/addon-webpack5-compiler-swc": "^4.0.1",
    "@storybook/react-webpack5": "^9.1.4",
    "@tailwindcss/postcss": "^4.1.12",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^8.0.0",
    "eslint-plugin-react": "^7.0.0",
    "eslint-plugin-react-hooks": "^4.0.0",
    "eslint-plugin-storybook": "^9.1.4",
    "os-browserify": "^0.3.0",
    "path-browserify": "^1.0.1",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "postcss-loader": "^8.2.0",
    "process": "^0.11.10",
    "storybook": "^9.1.4",
    "tailwindcss": "^4.1.13",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  }
}
